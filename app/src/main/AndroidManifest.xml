<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
    ===================================================================
    藍牙權限聲明 (Bluetooth Permissions)
    ===================================================================
    -->

    <!-- 1. 舊版藍牙權限 (Android 11 / API 30 及以下版本) -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />

    <!-- 2. 位置權限 (用於在 Android 11 及以下版本掃描藍牙裝置) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 3. 新版藍牙權限 (Android 12 / API 31 及以上版本) -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />


    <!--
    ===================================================================
    硬體功能聲明 (Feature Declaration)
    ===================================================================
    -->
    <uses-feature android:name="android.hardware.bluetooth" android:required="true"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MecanumCar"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape"> <!-- 修正點: 就是這一行 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
